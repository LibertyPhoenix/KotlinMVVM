<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_00b2e9</item>
        <item name="colorPrimaryDark">@color/color_00b2e9</item>
        <item name="colorAccent">@color/color_00b2e9</item>
        <item name="android:windowBackground">@color/color_ffffff</item>
        <item name="android:textColorHint">@color/color_80ffffff</item>
    </style>


    <style name="AppTheme.BaseToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/color_00b2e9</item>
    </style>

    <style name="tab_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:padding">@dimen/dim4</item>
        <item name="android:drawablePadding">@dimen/dim2</item>
        <item name="android:textColor">@drawable/tab_selector_tv_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <!-- <item name="android:background" >@drawable/tab_selector_checked_bg</item> -->
    </style>



</resources>
